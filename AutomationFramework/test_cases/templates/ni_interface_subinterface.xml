<rpc xmlns="urn:ietf:params:xml:ns:netconf:base:1.0" message-id="101">
  <edit-config>
    <target>
      <{{target}}/>
    </target>
    <config>
      <interfaces xmlns="http://openconfig.net/yang/interfaces">
        <interface>
          <name>{{interface}}</name>
          <config>
            <name>{{interface}}</name>
          </config>
          <subinterfaces>
            <subinterface>
              <index>{{subinterface}}</index>
              <config>
                <index>{{subinterface}}</index>
              </config>
            </subinterface>
          </subinterfaces>
        </interface>
      </interfaces>
      <network-instances xmlns="http://openconfig.net/yang/network-instance">
        <network-instance>
          <name>{{instance_name}}</name>
          <config>
            <name>{{instance_name}}</name>
          </config>
          <interfaces>
            <interface>
              <id>{{id}}</id>
              <config>
                <id>{{id}}</id>
                <interface>{{interface}}</interface>
                <subinterface>{{subinterface}}</subinterface>
              </config>
            </interface>
          </interfaces>
        </network-instance>
      </network-instances>
    </config>
  </edit-config>
</rpc>