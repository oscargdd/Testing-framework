<edit-config>
    <target>
    <{{target}}/>
    </target>
    <config>
      <interfaces xmlns="http://openconfig.net/yang/interfaces">
        <interface>
          <name>{{name}}</name>
          <subinterfaces>
            <subinterface>
              <index>{{index}}</index>
              <vlan xmlns="http://openconfig.net/yang/vlan">
                <match>
                  <single-tagged>
                    <config>
                      <vlan-id>{{vlan_id}}</vlan-id>
                    </config>
                  </single-tagged>
                </match>
              </vlan>
            </subinterface>
          </subinterfaces>
        </interface>
      </interfaces>
    </config>
  </edit-config>
