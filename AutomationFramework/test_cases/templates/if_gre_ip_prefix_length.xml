<edit-config>
  <target>
    <{{target}}/>
  </target>
  <config>
    <interfaces xmlns="http://openconfig.net/yang/interfaces">
      <interface>
        <name>{{name}}</name>
        <config>
          <name>{{name}}</name>
        </config>
        <tunnel xmlns="http://openconfig.net/yang/interfaces/tunnel">
          <ipv4>
            <addresses>
              <address>
                <ip>{{ip}}</ip>                
                <config>
                  <ip>{{ip}}</ip>
                  <prefix-length>{{prefix_length}}</prefix-length>
                </config>
              </address>
            </addresses>
          </ipv4>
        </tunnel>
      </interface>
    </interfaces>
  </config>
</edit-config>
