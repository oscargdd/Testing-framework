  <edit-config>
    <target>
      <{{target}}/>
    </target>
    <config>
      <network-instances xmlns="http://openconfig.net/yang/network-instance">
        <network-instance>
          <name>{{instance_name}}</name>
          <config>
            <name>{{instance_name}}</name>
          </config>
          <protocols>
            <protocol>
              <identifier>{{identifier}}</identifier>
              <name>{{name}}</name>
              <config>
                <identifier xmlns:oc-pol-types="http://openconfig.net/yang/policy-types">{{identifier}}</identifier>
                <name>{{name}}</name>
              </config>
              <static-routes>
                <static>
                  <prefix>{{prefix}}</prefix>
                  <config>
                    <prefix>{{prefix}}</prefix>
                  </config>
                  <next-hops>
                    <next-hop>
                      <config>
                        <index>{{index}}</index>
                        <next-hop>{{next_hop}}</next-hop>
                      </config>
                    </next-hop>
                  </next-hops>
                </static>
              </static-routes>
            </protocol>
          </protocols>
        </network-instance>
      </network-instances>
    </config>
  </edit-config>
